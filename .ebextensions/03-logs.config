# CloudWatch Logs configuration for application logs

files:
  "/opt/elasticbeanstalk/tasks/bundlelogs.d/applogs.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      /var/log/nodejs/*.log
      /var/log/eb-docker/containers/eb-current-app/*.log

  "/opt/elasticbeanstalk/tasks/taillogs.d/applogs.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      /var/log/nodejs/*.log
      /var/log/eb-docker/containers/eb-current-app/*.log

commands:
  01_create_log_dir:
    command: mkdir -p /var/log/nodejs && chmod 755 /var/log/nodejs
    ignoreErrors: true
