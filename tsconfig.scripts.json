{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/frontend/src/*"]
    }
  },
  "include": ["scripts/**/*.ts", "apps/frontend/src/**/*.ts"],
  "exclude": ["node_modules"]
}
